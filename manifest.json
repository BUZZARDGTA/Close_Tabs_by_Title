{
  "manifest_version": 3,
  "name": "Close Tabs by Title",
  "version": "1.0",
  "description": "Close tabs with a specific title using regular expressions.",
  "author": "IB_U_Z_Z_A_R_Dl",
  "browser_specific_settings": {
    "gecko": {
      "id": "BUZZARDGTA@protonmail.com",
      "strict_min_version": "109.0"
    }
  },
  "permissions": [
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "action": {
    "default_title": "Close Tabs by Title",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "64": "icons/icon64.png",
      "96": "icons/icon96.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "64": "icons/icon64.png",
    "96": "icons/icon96.png",
    "128": "icons/icon128.png"
  }
}
